# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org


root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.{js,ts,tsx,css}]
indent_style = tab
insert_final_newline = true

[*.json]
insert_final_newline = false

[package.json]
insert_final_newline = false

[*.md]
indent_style=space

[{package.json,*.yml}]
indent_style = space
indent_size = 2
