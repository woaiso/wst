#!/usr/bin/env node
"use strict";

/**
 * DEV 环境命令行
 */

import webpack from 'webpack';
import WebpackDevConfig from './../config/webpack.dev';



webpack(WebpackDevConfig, (err, stats) => {
    if (!err) {
		console.log(stats.toString({ colors: true }));
    } else {
		console.error(err.stack || err);

		if (err.details) {
			console.error(err.details);
		}
    }
});